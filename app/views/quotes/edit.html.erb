<% content_for :title, "Editing quote" %>

<h1>Editing quote</h1>




<%= form_with(model: @quote, url: quote_path(@quote), method: :patch, local: true) do |f| %> <%# I used copilot to help tweak the button so it updates %>
  <%= render 'form', f: f %>
  
  <!-- Submit -->
  <div class="mt-3">
    <%= f.submit 'Update Quote', class: 'btn btn-success btn-lg' %>
  </div>
<% end %>


<br>

<div>
  <%= link_to "Show this quote", @quote %> |
</div>
